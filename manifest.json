{
    "manifest_version": 2,

    "name": "Conscience",

    "version": "1.0",

    "web_accessible_resources": ["fonts/*", "popup.html", "listItem.html", "img/*"],

    "content_scripts": [
        {
            "matches": ["https://www.amazon.com/*", "http://www.amazon.com/*"],
            "js": ["js/jquery-1.11.2.js", "js/bootstrap.js", "js/jquery-ui.min.js", "js/contentscript.js"],
            "css": ["css/bootstrap.css", "css/conscience.css"],
            "run_at": "document_end"
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
